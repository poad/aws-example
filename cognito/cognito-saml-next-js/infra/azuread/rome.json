{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["**/*.d.ts", "*.js"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "all",
      "quoteProperties": "preserve"
    }
  }
}
